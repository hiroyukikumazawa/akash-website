---
import { Image } from "astro:assets";
import { ArrowUpCircle } from "lucide-react";
import FormattedDate from "../formatted-date.astro";
import ButtonLink from "../ui/button-link.astro";
interface Props {
  card: {
    image: string;
    eventDate: any;
    location: string;
    title: string;
    description: string;
    link: string;
    tbd: boolean;
  };
}

const { card } = Astro.props;
---

<div class="flex flex-col rounded-[8px] border bg-background2 p-5 shadow-sm">
  <div>
    <Image
      class="w-full rounded-[4px] object-cover"
      alt="Feature illustration"
      width={1200}
      height={1200}
      src={card.image}
      format="webp"
    />
  </div>

  <div class="mt-4 flex flex-1 flex-col justify-between">
    <div class="flex items-center gap-2">
      <p class="text-xs">
        {card.tbd ? "TBD" : <FormattedDate date={card.eventDate} />}
      </p>
      <p class="h-[2px] w-[2px] bg-para"></p>
      <p class="text-xs">{card.location}</p>
    </div>

    <h4
      class="mt-3 line-clamp-1 text-sm font-bold leading-normal text-foreground md:text-base lg:text-lg"
    >
      {card.title}
    </h4>

    <p
      class="mt-6 line-clamp-3 text-xs font-medium leading-[24px] text-para md:mt-6 md:text-sm"
    >
      {card.description}{" "}
    </p>

    <ButtonLink
      variant="secondary"
      size="xs"
      link={card.link}
      className="mt-10"
    >
      <ArrowUpCircle className="w-4 rotate-45 text-para" />
       Read More
    </ButtonLink>
  </div>
</div>
